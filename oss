IPADDRESS="-"

read -r -p "Do you want to connect to the server at $IPADDRESS? [y/N] " response
case "$response" in
    [yY][eE][sS]|[yY]) 
        ssh "$IPADDRESS"
        echo "Connection closed."
        ;;
    *)
        echo "Exiting..."
        exit
        ;;
esac
